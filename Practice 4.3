-- First Transaction
START TRANSACTION;
UPDATE StudentEnrollments SET enrollment_date = '2024-06-05' WHERE student_id = 1;
UPDATE StudentEnrollments SET enrollment_date = '2024-06-06' WHERE student_id = 2;
COMMIT;

-- Second Transaction
START TRANSACTION;
UPDATE StudentEnrollments SET enrollment_date = '2024-06-07' WHERE student_id = 2;
UPDATE StudentEnrollments SET enrollment_date = '2024-06-08' WHERE student_id = 1;
COMMIT;

-- Transaction with REPEATABLE READ isolation level
SET TRANSACTION ISOLATION LEVEL REPEATABLE READ;
START TRANSACTION;
SELECT * FROM StudentEnrollments WHERE student_id = 1;
COMMIT;

-- Update in a new transaction
START TRANSACTION;
UPDATE StudentEnrollments SET enrollment_date = '2024-07-10' WHERE student_id = 1;
COMMIT;

-- Select after update
SELECT * FROM StudentEnrollments WHERE student_id = 1;

-- Select with FOR UPDATE
START TRANSACTION;
SELECT * FROM StudentEnrollments WHERE student_id = 1 FOR UPDATE;
COMMIT;

-- Another transaction with select
START TRANSACTION;
SELECT * FROM StudentEnrollments WHERE student_id = 1;
COMMIT;

-- Repeatable Read transaction and select again
SET TRANSACTION ISOLATION LEVEL REPEATABLE READ;
START TRANSACTION;
SELECT * FROM StudentEnrollments WHERE student_id = 1;
COMMIT;

-- Update and commit
START TRANSACTION;
UPDATE StudentEnrollments SET enrollment_date = '2024-08-01' WHERE student_id = 1;
COMMIT;

-- Final select
SELECT * FROM StudentEnrollments WHERE student_id = 1;
